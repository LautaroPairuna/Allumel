		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="/lib/slider/slider.min.css">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script is:inline type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
		<script is:inline nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
	</head>
	<body>
		<slot />
	</body>
	<script src="./Layout.min.js" ></script>
	<script is:inline src="/lib/slider/slider.min.js" ></script>
